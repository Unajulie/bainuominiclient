<!-- <view class="head"></view> -->
<view style="width:100%;height:auto">
  <view style="position: absolute;width: 100%;height: auto;">
  <image src="https://bainuo.beijingepidial.com/public/img/00pan.jpg" style="width: 100%;height: auto;" mode="widthFix"></image>
    <view style="position: absolute;width: 100%;height: auto;top: 180rpx;flex: auto;">
    <view style="width: 100%;font-size: 46rpx;font-weight: 700;text-align: center;color: grey;">泛癌早期筛查</view>
    <view style="width: 100%;height: 280rpx;"></view>
    <view style="width: 100%;font-size: 50rpx;text-align: center;">条码注册/报告查询</view>
      <form bindsubmit='searchBox'>
        <view style="width: 100%;height: 100rpx;"></view>
        <view style="width: 100%;height: 110rpx;overflow: hidden;">
          <view style="width: 90%;height: 109rpx;margin: 0 auto;border-radius: 15rpx;">
            <view
              style='width:100%;height:100rpx;margin-top: 2rpx; border: 2rpx solid #97e2db; border-radius: 15rpx; display:inline-block; background:#fff;align-self: center;position: relative;'>
              <input
                style='width:80%;display:inline-block;height:100rpx;left: 10rpx; color: black;font-size: 40rpx; position: absolute;'
                placeholder-style='font-size:40rpx;' placeholder='条形码' type='text' bindinput="inputVal"
                value='{{sampleid}}'></input>
              <view style='width:16%;display:inline-block;height:70rpx;bottom: 16rpx;right: 20rpx; position: absolute;'>
                <image src='https://bainuo.beijingepidial.com/public/img/scan.jpg' bindtap="scanCode"
                  style='display:inline;' mode="aspectFit">
                </image>
              </view>
            </view>
          </view>
        </view>
        <view style="width: 100%;height: 6px;"></view>
        <view id="check-contain">
          <text class="privacy">*为了保护您的隐私，请输入\扫描条形码查询报告</text>
        </view>
        <button class="submit" bindtap="checkgenericReport">注册/查询</button>
        <button class="history" bindtap="checkgenericReport" bindtap="showModal">历史查询</button>
      </form>
      <!-- 历史barcode查询下滑入框开始 -->
      <view class="wrap">
        <!-- modal -->
        <view class="modal modal-bottom-dialog" hidden="{{hideFlag}}">
          <view class="modal-cancel" bindtap="hideModal"></view>
          <view class="bottom-dialog-body bottom-positon" animation="{{animationData}}">
            <view class='Mselect'>
              <scroll-view scroll-y="true">
              <view wx:if="{{barcodebox.length>0}}" style="width: 100%;height: auto;">
                <view style="text-align: center;font-weight: 600;font-size: 40rpx;">已注册条码</view>
                <view wx:key="i" wx:for="{{barcodebox}}" wx:for-item="data" bindtap='getOption'>
                    <view data-sampleid="{{data.sampleid}}" bindtap="checkgenericReport" style="text-align: left;font-size: 34rpx;font-weight: 500;">条码：{{data.sampleid}}
                      状态：{{data.status=="NO_STATUS"?"等待检测中":data.status=="POST_FROM_LAB"?"已从实验室寄出":data.status=="PARCEL_RECEIVED"?"实验室已取得唾液样本":data.status=="REGISTERED_IN_LIMS"?"样本已录入检测队列":data.status=="WAITING_DNA_PREP"?"等待提取DNA":data.status=="SEQUENCING"||data.status=="PAUSE_DETECTION"||data.status=="RE_DETECTING"||data.status=="UNQUALIFIED"?"分析DNA序列中":"已完成检测"}}
                    </view>
                 
                </view>
              </view>
              <view wx:else>暂无历史记录</view>
            </scroll-view>
            </view>
            <view>
            </view>
            <view class='Mcancel' bindtap='mCancel'>
              <text>取消</text>
            </view>
          </view>
        </view>
      
      </view>
      <!-- 下滑入框结束 -->
    </view>
  </view>
</view>