<view style="width: 100%;height: 100%;">
    <view style="width: 90%;height: 100%;margin: 0 auto;">
        <view style="font-size: 40rpx;font-weight: 600;margin-bottom: 20rpx;">泛癌检测采样信息绑定</view>
        <!--样本二维码信息录入模块 -->
        <view style="width: 100%;height: 550rpx;border: 2rpx solid green;">
            <view style="display: flex;width: 95%; margin: 0 auto;">
                <view style="width: 30%;height: 80rpx;line-height: 80rpx;font-size: 30rpx;margin-top: 20rpx;font-weight: 700;">样本二维码 <text style="color: red;">*</text> : </view>
                <view style='width:70%;height:80rpx;margin-top: 20rpx; border: 2rpx solid grey; display:inline-block; background:#fff;align-self: center;position: relative;'>
                    <input style='width:80%;display:inline-block;height:80rpx;left: 10rpx; color: black;font-size: 40rpx; position: absolute;' placeholder-style='font-size:30rpx;' placeholder='手动输入' type='text' bindinput="inputVal" value='{{sampleid}}'></input>
                    <view style='width:16%;display:inline-block;height:70rpx;bottom: 5rpx;right: 10rpx; position: absolute;'>
                        <image src='https://bainuo.beijingepidial.com/public/img/scan.jpg' bindtap="scanSampCode" style='display:inline;' mode="aspectFit">
                        </image>
                    </view>
                </view>
            </view>
            <view style="width: 100%;height: 80rpx;text-align: center;font-size: 30rpx;font-weight: 700;">（请务必核实样本二维码）</view>
            <view style="width: 95%;margin: 0 auto;">
                <!-- 检测项目，采样时间 -->
                <!-- <view style="width: 100%;height:auto">
                    <view style="width: 100%;height: 80rpx;display: flex;font-size: 30rpx;">检测项目 <text style="color: red;">*</text>：<input disabled="true" type="text" value='泛癌检测' style="width: auto;height: 50rpx;border: 1rpx solid grey;" /></view>
                </view> -->
                <view style="width: 100%;height: 80rpx;display: flex;font-size: 30rpx;">采样时间 <text style="color: red;">*</text>： <picker style="width: 50%;height: 50rpx;font-size: 30rpx;" mode="date" value="{{colldate}}" start="2018-01-01" bindchange='bitselect_colldate'>
                        <input style="width: 100%;height: 50rpx;border: 1rpx solid grey;font-size: 30rpx;" type="date" bindchange='bitselect_colldate' auto-focus="true" value="{{colldate}}" placeholder="请选择" disabled="true" />
                    </picker>
                </view>
                <!-- 结算类型，业务人员 -->

                <view style="width: 100%;height: 80rpx;display: flex;font-size: 30rpx;">结算类型：<picker style="width: 50%;height: 50rpx;font-size: 30rpx;" mode="selector" range="{{payarray}}" bindchange='bitselect_paymethod'>
                        <input style="width: 100%;height: 50rpx;border: 1rpx solid grey;font-size: 30rpx;" type="text" bindchange='bitselect_paymethod' auto-focus="true" value="{{payarray[paymethod]}}" placeholder="请选择" disabled="true" />
                    </picker>
                </view>
                <view style="width: 100%;height: 80rpx;display: flex;font-size: 30rpx;">业务人员：<picker style="width: 50%;height: 50rpx;font-size: 30rpx;" mode="selector" range="{{salesarray}}" bindchange='bitselect_sale'>
                        <input style="width: 100%;height: 50rpx;border: 1rpx solid grey;font-size: 30rpx;" type="text" bindchange='bitselect_sale' auto-focus="true" value="{{salesarray[saleval]}}" placeholder="请选择" disabled="true" />
                    </picker>
                </view>
                <!-- 采样地点 -->
                <view style="width:100%;height:80rpx;">
                    <view style="width: 100%;height: 80rpx;display: flex;font-size: 30rpx;">采样地点 <text style="color: red;">*</text>：<picker style="width: 70%;height: 50rpx;font-size: 30rpx;" mode="selector" range="{{spotarray}}" bindchange='bitselect_collspot'>
                            <input style="width: 100%;height: 50rpx;border: 1rpx solid grey;font-size: 30rpx;" type="text" bindchange='bitselect_collspot' auto-focus="true" value="{{spotarray[spotval]}}" placeholder="采样地点" disabled="true" />
                        </picker>
                    </view>
                </view>
            </view>
        </view>
        <!-- 客户信息录入模块 -->
        <view style="width: 100%;height: 500rpx;border: 2rpx solid green;margin-top: 50rpx;">
            <view style="width: 95%;margin: 0 auto;">
                <view style="display: flex;width: 100%; margin: 0 auto;">
                    <view style="width: 80%;height: 80rpx;line-height: 80rpx;font-size: 30rpx;margin-top: 20rpx;font-weight: 700;">客户信息二维码(请务必核实样本信息)</view>
                    <view style='width:16%;height:70rpx;margin-top: 20rpx;'>
                        <image src='https://bainuo.beijingepidial.com/public/img/scan.jpg' bindtap="scanUserCode" style='display:inline;' mode="aspectFit">
                        </image>
                    </view>
                </view>
                <!-- 姓名，性别 -->
                <view style="width: 100%;height:auto">
                    <view style="width:100%;height:80rpx;display: flex;">
                        <view style="width: 50%;height: 80rpx;display: flex;font-size: 30rpx;">姓名 <text style="color: red;">*</text>：<input type="text" value='' placeholder="请输入" value="{{username}}" bindinput='bininput_name' style="width: 60%;height: 50rpx;border: 1rpx solid grey;" />
                        </view>
                        <view style="width: 50%;height: 80rpx;display: flex;font-size: 30rpx;">性别 <text style="color: red;">*</text>：<picker style="width: 50%;height: 50rpx;font-size: 30rpx;" mode="selector" range="{{sexarray}}" value="{{sex}}" bindchange='bitselect_sex'>
                                <input style="width: 100%;height: 50rpx;border: 1rpx solid grey;font-size: 30rpx;" type="text" bindchange='bitselect_sex' auto-focus="true" value="{{sexarray[sexval]!=null?sexarray[sexval]:sexval}}" placeholder="请输入" disabled="true" />
                            </picker>
                        </view>
                    </view>
                </view>
                <!-- 年龄，手机号码-->
                <view style="width: 100%;height:auto">
                    <view style="width:100%;height:80rpx;display: flex;">
                        <view style="width: 40%;height: 80rpx;display: flex;font-size: 30rpx;">年龄：<input type="text" bindinput="bitinput_age" value='{{age}}' placeholder="请输入" style="width: 60%;height: 50rpx;border: 1rpx solid grey;" />
                        </view>
                        <view style="width: 60%;height: 80rpx;display: flex;font-size: 30rpx;">手机号 <text style="color: red;">*</text>：
                            <input style="width: 60%;height: 50rpx;border: 1rpx solid grey;font-size: 30rpx;" type="text" bindinput="bininput_phone" auto-focus="true" value="{{phone}}" placeholder="请输入" />
                        </view>
                    </view>
                </view>
                <!-- 身份证号码 -->
                <view style="width: 100%;height:auto">
                    <view style="width:100%;height:80rpx;display: flex;">
                        <view style="width: 100%;height: 80rpx;display: flex;font-size: 30rpx;">身份证号码：
                            <input style="width: 60%;height: 50rpx;border: 1rpx solid grey;font-size: 30rpx;" type="text" bindchange='bininput_identity' auto-focus="true" value="{{identity}}" placeholder="请输入(选填)" />
                        </view>
                    </view>
                </view>
                <!-- 备注-->
                <view style="width: 100%;border: 1rpx solid grey;font-size: 30rpx;">
                    备注：
                    <textarea name="staffnote" id="" cols="2" rows="2" bindinput="bitinput_staffnote" value="{{staffnote}}" style="width: 100%;height: 100rpx;font-size: 30rpx;"></textarea>
                </view>
            </view>
        </view>
        <!-- 保存并更新按钮 -->
    </view>
    <view style="width: 100%;height: 200rpx;margin-top: 50rpx;">
        <button style="width: 90%;margin: 0 auto;" bindtap="savebindedrep" type="primary" loading="" disabled="">保存并上传</button>
    </view>
</view>