<view style="width: 100%;height: 100%;">
    <!-- 录入受检者信息 -->
    <view style="width: 90%;margin-left: 5%; height: 140rpx;margin-top: 100rpx;line-height: 140rpx; border: 3rpx solid #e7dfdff1;border-radius: 20rpx;display: flex;justify-content: center;box-shadow:0px 2px 4px 2px #DDDDDD;" bindtap="Mergeinfo">
        <view style="width: 15%;height: 140rpx;">
            <image style="width: 80%;height: auto;margin-top: 30rpx;margin-left: 20rpx;" mode="widthFix" src="https://bainuo.beijingepidial.com/public/img/liverapply.png"></image>
        </view>
        <view style="width: 60%;margin-left: 5%; display: flex;font-size: 40rpx;font-weight: 600;">录入受检者信息</view>
        <view style="width: 20%;display: flex;">
            <image style="width: 30%;height: auto;margin-left: 20%;margin-top: 50rpx;" mode="widthFix" src="https://bainuo.beijingepidial.com/public/img/index/center4.png"></image>
        </view>
    </view>
    <!-- 肝癌筛选栏 -->
    <view style="width: 100%;margin: 0 auto;height: 350rpx;">
        <view style="width: 90%;display: flex; flex-direction: row; justify-content: flex-end;margin-top: 10rpx;line-height: 60rpx;height: 60rpx; font-size: 34rpx;">共有数据：
            <view style=" width: 60rpx;height: 60rpx;border-radius: 30rpx;background-color: #f7b759;text-align: center;line-height: 60rpx; font-size: 34rpx;color: #fff; ">{{searchedlist?searchedlist.length : mergedlist.length}}</view>
        </view>
        <!-- 通过时间段筛选栏 -->
        <view style="width: 90%;margin: 0 auto; height: auto;display: flex;flex-direction: column;">
            <view style="border-bottom: 1rpx solid grey;height: 70rpx;line-height: 70rpx; font-size: 36rpx; display: flex;flex-direction: row;">开始时间： <picker mode="date" value="{{startdate}}" start="2018-01-01" end="{{endate}}" bindchange='selStartdate'><input style="width: 100%;height: 70rpx;line-height: 70rpx;font-size: 36rpx;text-align: start;margin-bottom: 20rpx;" type="date" auto-focus="true" disabled="true" value="{{startdate}}" placeholder="请选择" placeholder-class="phcolor" bindchange='selStartdate' /></picker>></view>
            <view style="border-bottom: 1rpx solid grey;height: 70rpx;line-height: 70rpx; font-size: 36rpx; display: flex;flex-direction: row;">结束时间： <picker mode="date" value="{{tilldate}}" start="2018-01-01" end="{{endate}}" bindchange='selTilldate'><input style="width: 100%;height: 70rpx;line-height: 70rpx;font-size: 36rpx;text-align: start;margin-bottom: 20rpx;" type="date" auto-focus="true" disabled="true" value="{{tilldate}}" placeholder="请选择" placeholder-class="phcolor" bindchange='selTilldate' /></picker>></view>
        </view>
        <view style="width: 100%; height: 50rpx;margin-top: 50rpx;margin-bottom: 50rpx;">
            <button bindtap="search" style="margin: 0 auto ;width: 80%;color: white;text-align: center;font-size: 43rpx;height: 100rpx; line-height: 100rpx;border-radius:15rpx;background: #f7b759;box-shadow: 0px 5px 10px 3px #D1D1D1;">
                查询</button>
        </view>
    </view>
    <block wx:if="{{!searchedlist||searchedlist==null}}">
        <view wx:if="{{mergedlist.length>0}}" style="width: 100%;height: auto;margin-top: 50rpx;">
            <view wx:if="{{mergedlist.length>0}}" style="width: 100%;height: auto;">
                <view wx:key="i" wx:for="{{mergedlist}}" wx:for-item="data" style="width: 90%;margin-left: 5%; height: 100rpx;margin-top: 30rpx;line-height: 100rpx; border: 3rpx solid #e7dfdff1;border-radius: 20rpx;display: flex;justify-content: center;box-shadow:0px 2px 4px 2px #DDDDDD;">
                    <view data-sampleid="{{data.sampleid}}" data-username="{{data.username}}" bindtap='getMergedinfo' style="width: 90%;">
                        <view style="flex-direction: row;line-height: 100rpx;">
                            <text style="font-family: hansans; font-weight:600;font-size: 36rpx;">{{data.sampleid}} </text>
                            <text style="font-size: 36rpx;"> {{data.username}} </text>
                            <text style="color: grey;font-size: 36rpx;"> {{data.created}}</text>
                        </view>
                    </view>
                </view>
            </view>
        </view>
        <view wx:else style="width: 100%;margin-top: 50rpx;color: grey;font-size: 34rpx;text-align: center;">暂无肝癌信息绑定记录</view>
    </block>
    <!-- 肝癌客户申请列表信息 -->
    <block wx:else>
        <view wx:key="i" wx:for="{{searchedlist}}" wx:for-item="data" style="width: 90%;margin-left: 5%; height: 100rpx;margin-top: 30rpx;line-height: 100rpx; border: 3rpx solid #e7dfdff1;border-radius: 20rpx;display: flex;justify-content: center;box-shadow:0px 2px 4px 2px #DDDDDD;">
            <view data-sampleid="{{data.sampleid}}" data-username="{{data.username}}" data-disable="{{data.disabled}}" bindtap='getMergedinfo' style="width: 90%;">
                <view style="flex-direction: row;line-height: 100rpx;">
                    <text style="font-family: hansans; font-weight:600;font-size: 36rpx;">{{data.sampleid}} </text>
                    <text style="font-size: 36rpx;"> {{data.username}} </text>
                    <text style="color: grey;font-size: 36rpx;"> {{data.created}}</text>
                </view>
            </view>
        </view>
    </block>
</view>