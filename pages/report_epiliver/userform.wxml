
  <view style="width: 100%;height: 100%; position:absolute">
    <!-- <image style="width: 100% ;height: 120%;position: relative;" mode="widthFix" src="https://bainuo.beijingepidial.com/public/img/userbg.png"></image> -->

    <view style="width: 100%;height: auto;position: absolute ;top: 450rpx;">
      <view style="width: 80%;height: auto;margin: 0 auto;font-weight: 700;text-align: center;color: #0081cc;">用户信息登记表
      </view>

    </view>

    <view>
      <view style="position: absolute; width: 100%;height: auto;top: 550rpx;flex: auto;">
        <view style="width: 80%;height: auto;margin: 0 auto;">
          <view style="width: 90%;height: auto;margin:20px auto;">


            <view>
              <view view style="display: flex;width: 100%;border-bottom: solid 1px #0081cc;">
                <view style="width: 30px;height: 45px;position: relative;">
                  <image style="width: 18px;height: 45px;position: absolute;top: 15px;right: 5px;" mode="widthFix"
                    src="../../img/user03.png">
                  </image>
                </view>
                <view style="width: 300px;height: auto;">
                  <input style="width: 100%;height: 45px;font-size: 15px;" type="text" placeholder="姓名"
                  value="{{username}}" bindinput='bininput_name' placeholder-class="phcolor" />

                </view>

              </view>
            </view>
            <view>
              <view view style="display: flex;width: 100%;border-bottom: solid 1px #0081cc;">
                <view style="width: 30px;height: 45px;position: relative;">
                  <image style="width: 18px;height: 45px;position: absolute;top: 15px;right: 5px;" mode="widthFix"
                    src="../../img/phone01.png">
                  </image>
                </view>
                <view style="width: 300px;height: auto;">
                  <input style="width: 100%;height: 45px;font-size: 15px;" type="number" value="{{phone}}" bindinput='bininput_mobile' placeholder="手机号码"
                    bindinput="vdcodeIn" placeholder-class="phcolor" />

                </view>

              </view>
            </view>

            <view view style="display: flex;width: 100%;border-bottom: solid 1px #0081cc;">
              <view style="width: 30px;height: 45px;position: relative;">
                <image style="width: 18px;height: 45px;position: absolute;top: 15px;right: 5px;" mode="widthFix"
                  src="../../img/identify.png">
                </image>
              </view>
              <view style="width: 300px;height: auto;">
                <input style="width: 100%;height: 45px;font-size: 15px;"  type="idcard" value="{{identity}}"
          bindinput='bininput_identity' auto-focus="true" placeholder="身份证" placeholder-class="phcolor" />
              </view>

            </view>
            <view view style="display: flex;width: 100%;border-bottom: solid 1px #0081cc;">
              <view style="width: 30px;height: 45px;position: relative;">
                <image style="width: 18px;height: 45px;position: absolute;top: 15px;right: 5px;" mode="widthFix"
                  src="../../img/barcode.png">
                </image>
              </view>
              <view style="width: 300px;height: auto;">
                <input disabled="true" style="width: 100%;height: 45px;font-size: 15px;" type="text" value="{{sampleid}}" placeholder="样本编号"
                  placeholder-class="phcolor" bindinput="cmpwdIn" />
              </view>
            </view>
            <view view style="display: flex;width: 100%;">

              <view style="width: 100%;height: auto;line-height: 100rpx; display: flex;">
                <radio name="agreement" value="agree" checked="{{checked}}" bindtap="checkedTap" />
                <navigator url="/pages/agreement/agreement" hover-class="navigator-hover">
                  <view style="font-size:25rpx ;height: 100rpx;line-height: 100rpx;color: #797979;">同意并接受条款</view>
                </navigator>
              </view>
            </view>
            <view style="width: 100%; height: auto;margin-top: 50rpx;">
              <button bindtap="btnckreport"
                style="margin: 0 auto ;width: 70%;color: white;text-align: center;line-height: 45px;border-radius:25px;background: #43b4f6;">
                查询报告</button>
            </view>
          </view>

        </view>


      </view>
    </view>
  </view>