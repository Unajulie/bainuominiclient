<!--pages/report_epiage/report_epistatus.wxml-->
<view>
    <view style="width: 100%;height: auto; position:absolute">
        <!-- <image style="width: 100% ;position:absolute" mode="widthFix" src="../../img/statusbg.png"></image> -->
        <view style="width: 100%;height: auto; display:flex;position: absolute ;top:30px;">
            <view style="width: 100%;height: auto;">
                <image style="width: 50%;" mode="widthFix" src="../../img/progress.png"></image>
            </view>
    
        </view>
        <view style="width: 100%;height: auto;position: absolute ;top: 135px;">
            <view style="width: 80%;height: auto;margin: 0 auto;font-weight: 700;">当前进度!</view>
        </view>
        <view style="width: 100%;height:auto;position: absolute;top:160px">
            <view style="width: 80%;height:auto;margin: 0 auto;display: flex">
                <view style="width: 10%;height: 534px;">
                    <view style="width: 100%;height: auto;flex-direction: column;">
                        <view
                            style="border-radius: 20px; width: 20px;height:20px; background-color:{{status=='NO_STATUS'?'#069ce8':'#7b7c7e'}};text-align: center;color: white;position: absolute;margin-top:20px;font-weight: 700;">
                            <image style="width: 20px;height:20px;" mode="widthFix" src="../../img/arrow.png"></image></view>
                        <view
                            style="border-radius: 20px; width: 20px;height:20px; background-color:{{status=='POST_FROM_LAB'?'#069ce8':'#7b7c7e'}};text-align: center;color: white;position: absolute;top:90px;font-weight: 700;">
                            <image style="width: 20px;height:20px;" mode="widthFix" src="../../img/arrow.png"></image></view>
                        <view
                            style="border-radius: 20px; width: 20px;height:20px; background-color:{{status=='PARCEL_RECEIVED'?'#069ce8':'#7b7c7e'}};text-align: center;color: white;position: absolute;top:160px;font-weight: 700;">
                            <image style="width: 20px;height:20px;" mode="widthFix" src="../../img/arrow.png"></image></view>
                        <view
                            style="border-radius: 20px; width: 20px;height:20px; background-color:{{status=='REGISTERED_IN_LIMS'?'#069ce8':'#7b7c7e'}};text-align: center;color: white;position: absolute;top:230px;font-weight: 700;">
                            <image style="width: 20px;height:20px;" mode="widthFix" src="../../img/arrow.png"></image></view>
                        <view
                            style="border-radius: 20px; width: 20px;height:20px; background-color: {{status=='WAITING_DNA_PREP'?'#069ce8':'#7b7c7e'}};text-align: center;color: white;position: absolute;top:300px;font-weight: 700;">
                            <image style="width: 20px;height:20px;" mode="widthFix" src="../../img/arrow.png"></image></view>
                        <view
                            style="border-radius: 20px; width: 20px;height:20px; background-color: {{status=='SEQUENCING'?'#069ce8':'#7b7c7e'}};text-align: center;color: white;position: absolute;top:370px;font-weight: 700;">
                            <image style="width: 20px;height:20px;" mode="widthFix" src="../../img/arrow.png"></image></view>
                        <view
                            style="border-radius: 20px; width: 20px;height:20px; background-color: {{status=='Completed'?'#069ce8':'#7b7c7e'}};text-align: center;color: white;position: absolute;top:440px;font-weight: 700;">
                            <image style="width: 20px;height:20px;" mode="widthFix" src="../../img/arrow.png"></image></view>
                    </view>
                    <view style="width: 15%;height: 1080rpx;margin: 0 auto;background-color: #b5b5b5;"></view>
                </view>
                <view style="width: 100%;height: 1080rpx;">
                    <view style="width: 100%;height: 30px;display: flex;">
                        <!-- 空盒子 -->
                        <view style="width:{{status=='NO_STATUS'?'20%':'0px'}};height: 35px;margin-left: 5px;"></view>
                        <view style="width: 80%;height: 35px;background-color: {{status=='NO_STATUS'?'#069ce8':'#7b7c7e'}};display: flex;border-radius: 5px;margin-top: 15px;">
                            <view style="width: 20%;height: 35px;position: relative;">
                                <image style="position: absolute;top:5px;left:8px;;width: 25px;height: 30px ;" mode="widthFix" src="../../img/status01.png"></image>
                            </view>
                            <view style="width: 80%;height: 35px;line-height: 35px;margin-left:2px;font-size: 12px;color: white;">试剂盒已从实验室寄出</view>
                        </view>
                    </view>

                    <view style="width: 100%;height: 30px;display: flex;">
                        <!-- 空盒子 -->
                        <view style="width: {{status=='POST_FROM_LAB'?'20%':'0px'}};height: 35px;margin-left: 5px;"></view>
                        <view style="width: 80%;height: 35px;background-color: {{status=='POST_FROM_LAB'?'#069ce8':'#7b7c7e'}};display: flex;border-radius: 5px;margin-top: 55px;">
                            <view style="width: 20%;height: 35px;position: relative;">
                                <image style="position: absolute;top:5px;left:8px;;width: 25px;height: 30px ;" mode="widthFix" src="../../img/status02.png"></image>
                            </view>
                            <view style="width: 80%;height: 35px;line-height: 35px;margin-left:2px;font-size: 12px;color: white;">该条码等待检测中</view>
                        </view>
                    </view>
                    <view style="width: 100%;height: 30px;display: flex;">
                        <!-- 空盒子 -->
                        <view style="width: {{status=='PARCEL_RECEIVED'?'20%':'0px'}};height: 35px;margin-left: 5px;"></view>
                        <view style="width: 80%;height: 35px;background-color: {{status=='PARCEL_RECEIVED'?'#069ce8':'#7b7c7e'}};display: flex;border-radius: 5px;margin-top: 95px;">
                            <view style="width: 20%;height: 35px;position: relative;">
                                <image style="position: absolute;top:5px;left:8px;;width: 25px;height: 30px ;" mode="widthFix" src="../../img/status03.png"></image>
                            </view>
                            <view style="width: 80%;height: 35px;line-height: 35px;margin-left:2px;font-size: 12px;color: white;">实验室已收到您寄回的样本</view>
                        </view>
                    </view>
                    <view style="width: 100%;height: 30px;display: flex;">
                        <!-- 空盒子 -->
                        <view style="width:{{status=='REGISTERED_IN_LIMS'?'20%':'0px'}};height: 35px;margin-left: 5px;"></view>
                        <view style="width: 80%;height: 35px;background-color: {{status=='REGISTERED_IN_LIMS'?'#069ce8':'#7b7c7e'}};display: flex;border-radius: 5px;margin-top: 135px;">
                            <view style="width: 20%;height: 35px;position: relative;">
                                <image style="position: absolute;top:5px;left:8px;;width: 25px;height: 30px ;" mode="widthFix" src="../../img/status04.png"></image>
                            </view>
                            <view style="width: 80%;height: 35px;line-height: 35px;margin-left:2px;font-size: 12px;color: white;">样本等待检测中</view>
                        </view>
                    </view>
                    <view style="width: 100%;height: 30px;display: flex;">
                        <!-- 空盒子 -->
                        <view style="width:{{status=='WAITING_DNA_PREP'?'20%':'0px'}};height: 35px;margin-left: 5px;"></view>
                        <view style="width: 80%;height: 35px;background-color: {{status=='WAITING_DNA_PREP'?'#069ce8':'#7b7c7e'}};display: flex;border-radius: 5px;margin-top: 175px;">
                            <view style="width: 20%;height: 35px;position: relative;">
                                <image style="position: absolute;top:5px;left:8px;;width: 25px;height: 30px ;" mode="widthFix" src="../../img/status05.png"></image>
                            </view>
                            <view style="width: 80%;height: 35px;line-height: 35px;margin-left:2px;font-size: 12px;color: white;">样本DNA正在提取中</view>
                        </view>
                    </view>
                    <view style="width: 100%;height: 30px;display: flex;">
                        <!-- 空盒子 -->
                        <view style="width:{{status=='SEQUENCING'?'20%':'0px'}};height: 35px;margin-left: 5px;"></view>
                        <view style="width: 80%;height: 35px;background-color: {{status=='SEQUENCING'?'#069ce8':'#7b7c7e'}};display: flex;border-radius: 5px;margin-top: 215px;">
                            <view style="width: 20%;height: 35px;position: relative;">
                                <image style="position: absolute;top:5px;left:8px;;width: 25px;height: 30px ;" mode="widthFix" src="../../img/status06.png"></image>
                            </view>
                            <view style="width: 80%;height: 35px;line-height: 35px;margin-left:2px;font-size: 12px;color: white;">样本DNA序列正在分析中</view>
                        </view>
                    </view>
                    <view bindtap="showpdf" data-phone="{{phone}}" data-barcode="{{barcode}}" style="width: 100%;height: 30px;display: flex;">
                        <!-- 空盒子 -->
                        <view style="width: {{status=='Completed'?'20%':'0px'}};height: 35px;margin-left: 5px;"></view>
                        <view style="width: 80%;height: 35px;background-color: {{status=='Completed'?'#069ce8':'#7b7c7e'}};display: flex;border-radius: 5px;margin-top: 255px;">
                            <view style="width: 20%;height: 35px;position: relative;">
                                <image style="position: absolute;top:5px;left:8px;;width: 25px;height: 30px ;" mode="widthFix" src="../../img/status07.png"></image>
                            </view>
                            <view style="width: 80%;height: 35px;line-height: 35px;margin-left:2px;font-size: 12px;color: white;">样本报告已生成</view>
                        </view>
                    </view>
                   

                </view>
            </view>

        </view>
    </view>
</view>