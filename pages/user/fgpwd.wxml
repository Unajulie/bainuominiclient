<!--pages/epiage/fgpwd.wxml-->
<view>
    <view style="width:100%;height: auto; ">
        <view style="position: absolute;width: 100%;height: auto;">
            <image style="width: 100%;" mode="widthFix"
                src="https://bainuo.beijingepidial.com/public/img/linverloginbg.png"> </image>
            <view>
                <view style="position: absolute; width: 100%;height: auto;top: 200px;flex: auto;">
                    <view
                        style="width: 80%;height: auto;margin: 0 auto;border: 1px solid white;background-color: white;border-radius: 10px;box-shadow: 0px 5px 10px 3px #D1D1D1;">
                        <view style="width: 90%;height: auto;margin:20px auto;">
                            <view style="display: flex;width: 100%;border-bottom: solid 1px #cecece;">

                                <view style="width: 30px;height: 45px;position: relative;">
                                    <image mage
                                        style="width: 18px;height: 45px;position: absolute;top: 15px;right: 5px;"
                                        mode="widthFix" src="../../img/phone.png">
                                    </image>

                                </view>
                                <view style="width: 300px;height: auto;display:flex;">
                                    <input style="width:100%;height: 45px;;font-size: 12px;" type="text"
                                        placeholder="请输入电话号码" placeholder-class="phcolor" bindinput="phoneInput"/>
                                    <view ><button disabled="{{disabled}}" bindtap="btnclic"
                                            style="height: 35px;width: 80px;background: {{color}};line-height: 35px;font-size: 10px;color: white;">{{msg}}</button>
                                    </view>
                                </view>


                            </view>


                            <view>
                                <view view style="display: flex;width: 100%;border-bottom: solid 1px #cecece;">
                                    <view style="width: 30px;height: 45px;position: relative;">
                                        <image style="width: 18px;height: 45px;position: absolute;top: 15px;right: 5px;"
                                            mode="widthFix" src="../../img/check.png">
                                        </image>
                                    </view>
                                    <view style="width: 300px;height: auto;">
                                        <input style="width: 100%;height: 45px;font-size: 12px;" type="number"
                                            placeholder="验证码" bindinput="vdcodeIn" placeholder-class="phcolor" />

                                    </view>

                                </view>
                            </view>
                            
                            <view view style="display: flex;width: 100%;border-bottom: solid 1px #cecece;">
                                <view style="width: 30px;height: 45px;position: relative;">
                                    <image style="width: 18px;height: 45px;position: absolute;top: 15px;right: 5px;"
                                        mode="widthFix" src="../../img/lock01.png">
                                    </image>
                                </view>
                                <view style="width: 300px;height: auto;">
                                    <input style="width: 100%;height: 45px;font-size: 12px;" type="password"
                                        placeholder="请输入6到12位新密码" placeholder-class="phcolor" bindblur="vdpwd" bindinput="passwordInput"/>

                                </view>

                            </view>
                            <view view style="display: flex;width: 100%;border-bottom: solid 1px #cecece;">
                                <view style="width: 30px;height: 45px;position: relative;">
                                    <image style="width: 18px;height: 45px;position: absolute;top: 15px;right: 5px;"
                                        mode="widthFix" src="../../img/lock01.png">
                                    </image>
                                </view>
                                <view style="width: 300px;height: auto;">
                                    <input style="width: 100%;height: 45px;font-size: 12px;" type="password"
                                        placeholder="确认新密码" placeholder-class="phcolor" bindinput="cmpwdIn" />

                                </view>

                            </view>
                            <view style="width: 100%; height: auto;margin-top: 20px;">
                                <button disabled="{{enablereg}}" bindtap="btnreg"
                                    style="margin: 0 auto ;width: 80%;color: white;text-align: center;line-height: 45px;border-radius: 5px;background: {{regcolor}};">
                                    设置新密码</button>
                            </view>
                        </view>

                    </view>

                </view>
            </view>

        </view>
    </view>
</view>
