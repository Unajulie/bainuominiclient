.help {
    width: 100%;
    margin: 0 auto;
  }
  .help .help_item {
    margin: 40rpx auto;
  }
  .help .help_item .title {
    font-size: 32rpx;
    font-weight: 500;
    height: 80rpx;
    line-height: 80rpx;
    background: #ebf8fe;
    display: flex;
  }
  .help .help_item .title .title_1 {
    width: 100%;
    height: 60rpx;
    padding-left: 20rpx;
  }
  .help .help_item .title .title_2 {
    width: 50rpx;
    height: 60rpx;
    text-align: center;
  }
  .help .help_item .title .title_2 image {
    width: 30rpx;
    height: 30rpx;
    margin: 20rpx auto;
  }
  .help .help_item .detail {
    margin: 10rpx auto;
    font-size: 28rpx;
    line-height: 40rpx;
    text-indent: 2em;
  }